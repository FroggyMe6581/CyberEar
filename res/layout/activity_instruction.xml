<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="1310dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Instruction" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/how_to_use"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="26dp"
        android:text="text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
         android:text="text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="200dp"
        android1:layout_height="300dp"
        android1:layout_below="@+id/textView3"
        android1:layout_centerHorizontal="true"
        android1:src="@drawable/new_user" />

    <TextView
        android1:id="@+id/textView6"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView5"
        android1:layout_below="@+id/imageView2"
        android1:layout_marginTop="37dp"
        android1:text="Large Text"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android1:id="@+id/textView7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView6"
        android1:layout_below="@+id/textView6"
        android1:layout_marginTop="21dp"
        android1:text="Medium Text"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView3"
        android1:layout_below="@+id/imageView1"
        android1:layout_marginTop="25dp"
        android1:text="Large Text"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android1:id="@+id/textView5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView4"
        android1:layout_below="@+id/textView4"
        android1:layout_marginTop="24dp"
        android1:text="Medium Text"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android1:id="@+id/imageView2"
        android1:layout_width="200dp"
        android1:layout_height="300dp"
        android1:layout_alignLeft="@+id/imageView1"
        android1:layout_below="@+id/textView5"
        android1:layout_marginTop="31dp"
        android1:src="@drawable/hearing_aid" />

    <ImageView
        android1:id="@+id/imageView3"
        android1:layout_width="200dp"
        android1:layout_height="300dp"
        android1:layout_alignLeft="@+id/imageView2"
        android1:layout_below="@+id/textView7"
        android1:layout_alignParentBottom="true"
        android1:src="@drawable/manage_user" />

</RelativeLayout>
</ScrollView>